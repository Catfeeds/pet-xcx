@import "/static/icon.wxss";
@import "/pages/template/template.wxss";
 page{
   width: 100%;
   height: 100%;
   padding-bottom: 75rpx;
   background: #F4F4F4;
 }
 .wrap{
  background:white;
 }
 .wrap .space-line{
   width:750rpx;
   height: 5rpx;
   background: #F0F0F0;
 }
 .wrap .wrap-header {
  
  padding:10rpx 85rpx;
 

 }
 .wrap .wrap-header .wrap-header-content{
    display:flex;
    flex-direction:row;
    align-items:center;
    border: 1rpx solid #ffd343;
    border-radius: 20rpx;
    z-index: 999;
 }

  .wrap .wrap-header .wrap-header-content .wrap-view{
    border-left: 1rpx solid #ffd343;
    border-right: 1rpx solid #ffd343;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #ffd343;
    background: white;
    z-index: 888;
    width: 33.3%; 
    height: 50rpx;                                        
  }
  .wrap .wrap-header .wrap-header-content .wrap-view.selected{
    border: 0;
    color: white;
    background: #ffd343;

  }
  .wrap .wrap-header .wrap-header-content .wrap-left{
    border-left: 0;
    border-top-left-radius:20rpx;
    border-bottom-left-radius: 20rpx; 
  }
  .wrap .wrap-header .wrap-header-content .wrap-right{
    border-right: 0;
    border-top-right-radius:20rpx;
    border-bottom-right-radius: 20rpx;
    
  }
  .wrap .wrap-header .wrap-header-content .wrap-middle{
    border-left: 0;
    border-right: 0;
  }
  .content{
    padding: 0rpx 40rpx;
  }
  .content .content-item{
    display: flex;
    flex-direction: column;
    border-bottom: 2rpx solid #F0F0F0;
    
  }
  .content .content-item .content-top{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    height:60rpx;
    align-items:center;

  }
  .content .content-item .content-top .content-top-left{
    color: #666666;
    font-size: 30rpx;
  }
   .content .content-item .content-top .content-top-right{
     color: #999999;
   }
   .content .content-item .content-bottom{
     color: #999999;
     padding-bottom: 20rpx;
   }