/* pages/goods/goodsSearch/goodsSearch.wxss */
page{
  font-family: "微软雅黑";
}
/*搜索*/
.search-wrap{
  background-color: #F0F0F0;
  padding: 10px 15px;
  display: flex;
  flex-direction: row;
  height: 30px;
}

.search-wrap .search-left{
 
  padding-left: 40rpx;
  position: relative;
  background: #ffffff;
  border-radius: 10rpx;
  /*padding-top: 5px;
  padding-bottom: 5px;*/
  width: 80%;
}

.search-wrap .search-left image{
  position: absolute;
  width: 20px;
  height: 20px;
  top:6px;
  left:5px;
}

.search-wrap .search-left input{
  padding-left:10px;
  height: 20px ! important;
  line-height: 30px;
  min-height: 30px;
  vertical-align:middle;
  font-size: 13px;
}

.place-holder{
  line-height: 20px;
  vertical-align: middle;
}

.search-wrap .search-right{
  width: 20%;
  margin-left: 26rpx;
  background-color: #FFEB00;
  text-align: center;
  font-size: 15px;
  line-height:30px;
}
/*商品*/
.goods-list{
  width: 100%;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.goods-list .goods-item{
  display: flex;
  flex-direction: column;
  position: relative;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  height: 100px;
  border-bottom: 1px solid #ECECEC;
  padding: 10px 8px 10px 110px;
}
.goods-list .goods-item .goods-img{
  width: 100px;
  height: 80px;
  position: absolute;
  top: 10px;
  left: 0px;
}
.goods-list .goods-item .goods-name{
  font-size: 12px;
  display: block;
  color: #666666;
  height: 30px;
  line-height: 13px;
  overflow: hidden;
}
.goods-list .goods-item .add-box{
  height: 30px;
  font-size: 13px;
  text-align: right;
  line-height: 30px;
  margin-top: 5px;
}
.goods-list .goods-item .add-box image{
  display: inline-block;
  width: 30px;
  height: 30px;
}
.goods-list .goods-item .add-box .goods-count{
  padding: 0 10px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  position: relative;
  top: -10px;
  text-align: center;
}
.goods-list .goods-item .price-box{
  font-size: 12px;
  color: #666;
}
.goods-list .goods-item .price-box .now-price{
  font-size: 14px;
  color: #F54702;
}
.goods-list .goods-item .price-box .pre-price{
  position: relative;
  margin-left: 10px;
}
.goods-list .goods-item .price-box .pre-price:after{
  position: absolute;
  width: 110%;
  content:"";
  height: 2rpx;
  background: #666666;
  left: 0rpx;
  top: 50%;
  /*margin-top: -1rpx;*/
}
.tip-text{
  text-align: center;
  font-size: 12px;
  color: #999999;
  padding-top: 5px;
}

/*购物车*/
.cart-box{
  width: 40px;
  height: 40px;
  position: fixed;
  z-index: 500;
  bottom: 10px;
  left: 10px;
}
.cart-box image{
  width: 100%;
  height: 100%;
}
.cart-box text{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #E8010C;
  position: fixed;
  z-index: 600;
  text-align: center;
  line-height: 20px;
  color: #fff;
  font-size: 12px;
  bottom:40px;
  left:30px;
}