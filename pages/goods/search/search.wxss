.container{
    padding:35px 0;
}

.recommend-goods-diplay-area{
    padding: 10rpx ;
    background: #fff;
}
.recommend-goods-diplay-area .recommend-title{
    margin-top: 10rpx;
    padding: 5rpx 0;
    width: 100%;
    display: flex;
    font-size: 11pt;
    border-bottom: 1rpx solid #e5e5e5;
    margin-bottom: 5rpx;
}
.recommend-goods-diplay-area .recommend-goods-list{
    
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
  
}
image {
    width:100%;
    height:240rpx;
    display:inline-block;
    overflow:hidden;

}

.recommend-goods-list .goods-item{
    width: 46%;
    padding: 7rpx;
    float: left;
    font-size: 10pt;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    position: relative;
    border-radius: 3rpx;
    margin: 5rpx;
    border: 1rpx solid #e7e7e7;
}
.goods-ori-price{
    text-decoration:line-through;
    color:#aaa;
}
.goods-price{
    color:#f45341;
}
.buy-now{
    position: absolute;
    background: #FF5C00;
    right: 10rpx;
    color:#fff;
    padding: 4rpx;
    border-radius: 5rpx;
    bottom: 10rpx;  
}
.header {
    height:80rpx;
    width:100%;
    position:fixed;
    top:0;
    left:0;
    z-index:99;
    background:#FE7774;


}
.header .main {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    width: 695rpx;
    height: 56rpx;
    color: #fff;
    font-weight: normal;
    margin: 0 auto;
    margin-top: 12rpx;
    padding: 0 18rpx;
    border-radius: 8rpx;
    font-size: 35rpx;
    background-color: rgba(255,255,255,.36);
}
.header .main .input {
    flex:1;
    margin-left:10rpx;
    font-size:10pt;
    color:#fff;

}
.header .main .place-holder {
    color: #fff;
}
.search{
    width: 50rpx;
    height: 50rpx;
    right:10rpx;
   padding: 0 5rpx;
    position: absolute;
    z-index: 999999;
}
.serach-button {
width:20px;
height:20px;
display:inline-block;
overflow:hidden;

}
