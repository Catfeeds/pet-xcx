@import "../../common/itemList/itemList.wxss";
@import "../template/template.wxss";
page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: rgb(0, 68, 97);
  z-index: 0;
}
.wc{
  font-size: 10pt;
  color:white;
  
  padding:30rpx 0 30rpx 40rpx;
  border-bottom:0.5px solid #e7e7e7;
 
}
.page-content{
  padding-top: 5rpx;
}
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: rgb(255, 255, 255);
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
/* 标签头部信息 */
.label_detail{
  color: #222;
  font-size: 30rpx;
  padding: 20rpx;
  display: block;
  line-height: 1.5em;
  letter-spacing:1px;
}
/* 商品列表 */
.goods-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 2rpx;
  padding: 0 10rpx;
}
.goods-list .goods-item {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 49.5%;
  padding-bottom: 60rpx;
  background: #ffffff;
  margin-bottom: 2rpx;
}
/* .goods-list .goods-item.item1 {
  border-right: 1rpx solid #f1f1f1;
} 
.goods-list .goods-item.item2 {
  border-left: 1rpx solid #f1f1f1; 
}*/
.goods-list .goods-item .goods-img {
  width: 100%;
}
.goods-list .goods-item .goods-name {
  box-sizing: border-box;
  padding: 3rpx 3rpx 10rpx 3rpx;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
  font-weight: 300;
}
.goods-list .goods-item .item-bottom {
  display: flex;
  flex-direction: row;
  padding: 5rpx 10rpx;
  align-items: center;
}
.goods-item .item-bottom .price {
  color: #FF2526;
}
.goods-item .item-bottom .cart-icon {
   width:  50rpx;
   height: 50rpx;
   padding: 5rpx;
   box-sizing: border-box;
   border: 1rpx solid #ccc;
   border-radius: 6rpx;
}
.goods-item .item-bottom .cart-icon image {
  width: 100%;
  height: 100%;
}
/*go-buy*/
.goods-item .item-bottom text{
	padding: 5rpx 10rpx;
	color: #777;
}
.goods-item .item-bottom .go-pay{
	background-color: #FF4A35;
	color: #fff;
	padding: 5rpx 15rpx;
	border-radius: 10rpx;
	margin-left:15rpx;
}