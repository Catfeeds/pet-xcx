/* pages/userCenter/orderList/orderList.wxss */
page{
  font-family: "微软雅黑";
  display: block;  
  min-height: 100%;  
  background-color: #FEF5FA;  
}
.container {
  padding: 0 0;
  padding-bottom: 120rpx;
  background-color: #FEF5FA;
}


/*订单样式*/
.top-img{
    width: 100%;
}
.top-img image{
    width: 100%;
    height: 460rpx;
}
.coupon-list .coupon {
    position: relative;
    margin-bottom: 10px;
    color: #ffffff;
    min-height: 160px;
    padding: 0 10px;
}
.coupon-list image {
    box-sizing: border-box;
    width: 100%;
    height: 160px;
    float: left;
    border-radius: 8px;
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;
}

.coupon-list .coupon-content {
    color: #EC4045;
    position: absolute;
    left: 0;
    top: 10px;
    height: 100%;
    width: 100%;
}
.coupon-list .coupon-content .coupon-top{
  font-size: 22px;
  height: 70px;
  padding: 0 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.coupon-list .coupon-content .coupon-bottom{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 65px;
  padding: 0 20px;
}
.coupon-list .coupon-content .coupon-bottom .top-info{
  padding-bottom: 6px;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.coupon-list .coupon-content .coupon-bottom .btn{
  padding: 2px 10px;
  font-size: 11px;
  color: #fff;
  background: #F2474D;
  border-radius: 10px;
  display: flex;
  align-items: center;
}
.coupon-list .coupon-content .coupon-bottom .btn_text{
  padding: 2px 10px;
  font-size: 11px;
  color: #fff;
  background: #FF8B22;
  border-radius: 10px;
  display: flex;
  align-items: center;
}
.coupon-list .coupon-content .coupon-bottom .bottom-info{
  font-size: 11px;
  color: #989898;
}
.cf{
  color: #989898;
}
.btnText{
  position: fixed;
  bottom: 0px;
  z-index: 2;
  background: #fff;
   height: 50px;
  width: 100%;
  font-size: 16px;
  border: 1px solid #EBEBEB;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.btn-left{
  width: 50%;
  display: flex;
  justify-content: center;
  border-right: 1px solid #989898;
}
.btn-right{
  width: 50%;
  display: flex;
  justify-content: center;
}