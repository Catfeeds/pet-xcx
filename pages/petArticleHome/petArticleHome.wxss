@import "/static/icon.wxss";
@import "/pages/template/template.wxss";
.cate-wrap{
    display:flex;
    padding-top:30rpx;
    background:#FFFFFF;
    flex-wrap:wrap;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
    padding-left:20rpx;
    padding-right:20rpx;

}
.head-box{
  position:relative;
  height:384rpx;
  width:750rpx;

}
swiper{
  height:400rpx;
  width:750rpx;

} 

.search-wrap{
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: row;
    background: white;
    align-items: center;
    padding:20rpx;

    
}
.search-wrap .location-city{
width:25%;
height: 65rpx;
background-color:#ffd343;
padding:10rpx;
display:flex;
flex-direction:row;
align-items:center;
background:#ffd343;
padding-top: 20rpx;
padding-bottom: 20rpx;
border-radius:20rpx;

}
.search-wrap .location-city .location-icon{
  margin-left:15rpx;
  font-size:30rpx;
}
.search-wrap .location-city .city-text{
  margin-right:23rpx;
  color:white;
  font-size:30rpx;

}
.location-city .location-icon{
  color: white;
}

.search-wrap .search-inner{
    width: 70%;
    height: 65rpx;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    box-sizing: border-box;
    padding: 10rpx;
    align-items: center;
    border-radius: 20rpx;
    border: 1rpx solid #ffd343;
    margin-left: 35rpx; 
}
.search-wrap .search-icon{
    width: 50rpx;
    height: 50rpx;
}
.search-wrap input{
    display: flex;
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 10rpx;
}
.search-wrap .search-inner .search-input{
    display: flex;
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    color: #CCCCCC;
    
}
.search-wrap .search-button{
  font-size:28rpx;
  width:188rpx;
  height:64rpx;
  margin-top:-4rpx;
  margin-right:-10rpx;
  border-radius:20rpx;
  background-color:#ffd343;
  color:white; 
}
.search-wrap .search-inner .search-inner-text{
  font-size: 30rpx;
}
.search-input{
  padding-top: 1rpx;
  height: 100%;
}

.cate-line{
  width: 100%;
  height: 20rpx;
  background: #F0F0F0;
}
.cate-wrap .cate-item{
    display: inline-block;
    width: 192rpx;
    height: 192rpx;
    box-sizing: border-box;
    padding: 10rpx 40rpx;
    text-align: center;
    white-space: normal;
    margin-bottom: 30rpx;
    border-width: 1px;
    border-color: rgb(234, 234, 234);
    border-style: solid;
    border-radius: 10px;
    box-shadow: 0px 0px 4.75px 0.25px rgba(0, 0, 0, 0.11);
    z-index: 45;
    
}
.cate-wrap .cate-item:nth-child(3n+0){
    border-right: none;
}
.cate-wrap .cate-item image{
    width: 100%;
    color: #2E2E2E;
    height: 100%;
}
.cate-wrap .cate-item .cate-name{
    width: 100%;
    display: block;
    text-align: center;
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #2E2E2E;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.cate-wrap .cate-item .cate-ename{
    width: 100%;
    display: block;
    text-align: center;
    margin-top: 10rpx;
    font-size: 20rpx;
}